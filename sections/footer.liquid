{% comment %} Footer Section - Modern, Modular, All Features from footer.md {% endcomment %}
<link rel="stylesheet" href="{{ 'footer.css' | asset_url }}">
<script src="{{ 'footer.js' | asset_url }}" defer></script>

<footer class="footer" {{ block.shopify_attributes }}>
  <div class="footer__container">
    {% if block.settings.show_newsletter %}
      {% render 'footer-newsletter-form', block: block, form_id: 'footer-newsletter' %}
    {% endif %}
    <div class="footer__grid">
      {% if block.settings.show_company_info %}
        <div class="footer__column footer__company">
          {% if block.settings.company_display_option == 'title_only' or block.settings.company_display_option == 'both' %}
            <h3 class="footer__title footer__company-title">{{ block.settings.company_title }}</h3>
          {% endif %}
          {% if block.settings.company_logo != blank %}
            {% if block.settings.company_display_option == 'logo_only' or block.settings.company_display_option == 'both' %}
              <div class="footer__company-logo" style="text-align: {{ block.settings.company_logo_align }}; margin: {{ block.settings.company_logo_margin }}px 0; padding: 16px;">
                <img src="{{ block.settings.company_logo | img_url: 'master' }}" alt="{{ block.settings.company_title }}" style="max-width: {{ block.settings.company_logo_size }}px; height: auto; border-radius: {{ block.settings.company_logo_border_radius }}px; display: inline-block;">
              </div>
            {% endif %}
          {% endif %}
          <div class="footer__company-info">
            {{ block.settings.company_info }}
            {% if block.settings.show_social_icons %}
              {% render 'footer-social-icons', block: block %}
            {% endif %}
          </div>
        </div>
      {% endif %}
      {% if block.settings.menu1 != blank and block.settings.show_menu1 %}
        <div class="footer__column">
          {% render 'footer-menu', menu: linklists[block.settings.menu1], title: block.settings.menu1_title, block: block, menu_id: 'menu1' %}
        </div>
      {% endif %}
      {% if block.settings.menu2 != blank and block.settings.show_menu2 %}
        <div class="footer__column">
          {% render 'footer-menu', menu: linklists[block.settings.menu2], title: block.settings.menu2_title, block: block, menu_id: 'menu2' %}
        </div>
      {% endif %}
      {% if block.settings.menu3 != blank and block.settings.show_menu3 %}
        <div class="footer__column">
          {% render 'footer-menu', menu: linklists[block.settings.menu3], title: block.settings.menu3_title, block: block, menu_id: 'menu3' %}
        </div>
      {% endif %}
      {% if block.settings.show_contact %}
        <div class="footer__column">
          <div class="footer__menu-wrapper">
            <div class="footer__menu-heading">
              <h3 class="footer__title footer__menu-title">{{ block.settings.contact_title }}</h3>
              <button class="footer__menu-toggle" aria-expanded="false" aria-controls="footer-contact">
                {% if block.settings.menu_icon == 'arrow' %}
                  <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="6 9 12 15 18 9"></polyline></svg>
                {% elsif block.settings.menu_icon == 'plus' %}
                  <span class="plus-icon" style="display:inline-block;"><svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg></span>
                  <span class="dash-icon" style="display:none;"><svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2"><line x1="5" y1="12" x2="19" y2="12"/></svg></span>
                {% elsif block.settings.menu_icon == 'custom' and block.settings.menu_icon_custom_svg != blank %}
                  <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">{{ block.settings.menu_icon_custom_svg }}</svg>
                {% endif %}
              </button>
            </div>
            <div id="footer-contact" class="footer__nav active">
              <div class="footer__company-info">{{ block.settings.contact_info }}</div>
            </div>
          </div>
        </div>
      {% endif %}
    </div>
    <div class="footer__bottom">
      <div class="footer__bottom-group">
        <div class="footer__copyright">{{ block.settings.copyright_text }}</div>
        {% if block.settings.show_payment_icons %}
          {% render 'footer-payment-icons' %}
        {% endif %}
      </div>
    </div>
  </div>
</footer>
