{% comment %}
  Enhanced Footer Section
  A comprehensive footer with newsletter, social media, menus, and extensive customization
{% endcomment %}

{{ 'footer.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign footer_id = section.id | replace: '_', '' | downcase
  assign animation_effect = settings.animations
  assign animated = false
  if animation_effect != 'none'
    assign animated = true
  endif
-%}

{% style %}
  .footer-{{ footer_id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    line-height: 1.5;
  }

  .footer-container-{{ footer_id }} {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .footer-grid-{{ footer_id }} {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    gap: {{ section.settings.column_spacing }}px;
    margin-bottom: {{ section.settings.section_spacing }}px;
  }

  .footer-column-{{ footer_id }} {
    display: flex;
    flex-direction: column;
  }

  .footer-title-{{ footer_id }} {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 500;
    margin-top: 0;
    margin-bottom: 20px;
    color: {{ section.settings.heading_color }};
  }

  .footer-nav-{{ footer_id }} {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin: 0;
    padding: 0;
    list-style: none;
    opacity: 1;
    max-height: 1000px;
    transition: none;
  }

  .footer-nav-{{ footer_id }}.fade {
    transition: opacity 0.3s;
    opacity: 0;
    max-height: 0;
    pointer-events: none;
  }

  .footer-nav-{{ footer_id }}.fade.active {
    opacity: 1;
    max-height: 1000px;
    pointer-events: auto;
  }

  .footer-nav-{{ footer_id }}.slide {
    transition: max-height 0.4s cubic-bezier(0.4,0,0.2,1), opacity 0.3s;
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .footer-nav-{{ footer_id }}.slide.active {
    max-height: 1000px;
    opacity: 1;
    pointer-events: auto;
  }

  .footer-nav-item-{{ footer_id }} a {
    text-decoration: none;
    color: {{ section.settings.text_color }};
    transition: color 0.2s ease;
  }

  .footer-nav-item-{{ footer_id }} a:hover {
    color: {{ section.settings.link_hover_color }};
  }

  .footer-company-info-{{ footer_id }} {
    margin-bottom: 20px;
    background: {{ section.settings.menu_bg_color }};
    border-radius: {{ section.settings.menu_border_radius }}px;
    padding: 16px;
  }

  .footer-company-title-{{ footer_id }} {
    text-transform: {{ section.settings.company_title_transform }};
    font-weight: {{ section.settings.company_title_weight }};
    font-size: {{ section.settings.company_title_size }}px;
    background: {{ section.settings.menu_bg_color }};
    border-radius: {{ section.settings.menu_border_radius }}px;
    padding: 8px 16px;
    display: inline-block;
  }

  .footer-company-logo-{{ footer_id }} {
    text-align: {{ section.settings.company_logo_align }};
    margin: {{ section.settings.company_logo_margin }}px 0;
    padding: 16px;
  }

  .footer-company-logo-{{ footer_id }} img {
    max-width: {{ section.settings.company_logo_size }}px;
    height: auto;
    border-radius: {{ section.settings.company_logo_border_radius }}px;
    display: inline-block;
  }

  .footer-social-{{ footer_id }} {
    display: flex;
    gap: {{ section.settings.social_icon_spacing }}px;
    margin-top: 20px;
  }

  .footer-social-link-{{ footer_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ section.settings.social_icon_size }}px;
    height: {{ section.settings.social_icon_size }}px;
    border-radius: {{ section.settings.social_icon_border_radius }}px;
    background-color: {{ section.settings.social_bg_color }};
    color: {{ section.settings.social_icon_color }};
    transition: all {{ section.settings.social_hover_transition }}s ease;
  }

  .footer-social-link-{{ footer_id }}:hover {
    background-color: {{ section.settings.social_hover_bg_color }};
    color: {{ section.settings.social_hover_icon_color }};
    {% if section.settings.social_hover_scale > 1 %}
      transform: scale({{ section.settings.social_hover_scale }});
    {% endif %}
    {% if section.settings.social_hover_rotate != 0 %}
      transform: rotate({{ section.settings.social_hover_rotate }}deg);
    {% endif %}
  }

  .footer-menu-title-{{ footer_id }} {
    text-transform: {{ section.settings.menu_title_transform }};
    font-weight: {{ section.settings.menu_title_weight }};
    font-size: {{ section.settings.menu_title_size }}px;
    background: {{ section.settings.menu_bg_color }};
    border-radius: {{ section.settings.menu_border_radius }}px;
    padding: {{ section.settings.menu_padding_y }}px {{ section.settings.menu_padding_x }}px;
    display: inline-block;
  }

  .footer-menu-wrapper-{{ footer_id }} {
    margin: {{ section.settings.menu_margin_y }}px {{ section.settings.menu_margin_x }}px;
    min-width: {% if section.settings.menu_min_width > 0 %}{{ section.settings.menu_min_width }}px{% else %}initial{% endif %};
    max-width: {% if section.settings.menu_max_width > 0 %}{{ section.settings.menu_max_width }}px{% else %}initial{% endif %};
  }

  .footer-social-icon-{{ footer_id }} {
    width: {{ section.settings.social_icon_inner_size }}px;
    height: {{ section.settings.social_icon_inner_size }}px;
  }

  .footer-bottom-{{ footer_id }} {
    display: flex;
    align-items: center;
    padding-top: 20px;
    border-top: 1px solid {{ section.settings.border_color }};
    justify-content: {{ section.settings.footer_bottom_alignment }};
  }

  .footer-copyright-{{ footer_id }} {
    font-size: {{ section.settings.copyright_size }}px;
  }

  .footer-payment-{{ footer_id }} {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    align-items: center;
  }

  .footer-payment-{{ footer_id }} svg {
    width: {{ section.settings.payment_icon_size }}px;
    height: auto;
  }

  .footer-newsletter-{{ footer_id }} {
    margin-bottom: 30px;
    text-align: {{ section.settings.newsletter_align }};
    {% if section.settings.newsletter_bg_image != blank %}
      background-image: url('{{ section.settings.newsletter_bg_image | img_url: 'master' }}');
      background-size: cover;
      background-position: center;
    {% endif %}
    padding: {{ section.settings.newsletter_section_padding }}px;
    margin-bottom: {{ section.settings.newsletter_section_margin }}px;
  }

  .footer-newsletter-title-{{ footer_id }} {
    text-transform: {{ section.settings.newsletter_title_transform }};
    font-weight: {{ section.settings.newsletter_title_weight }};
    font-size: {{ section.settings.newsletter_title_size }}px;
    background: {{ section.settings.menu_bg_color }};
    border-radius: {{ section.settings.menu_border_radius }}px;
    padding: 8px 20px 8px 0;
    display: inline-block;
  }

  .footer-newsletter-form-{{ footer_id }} {
    display: flex;
    flex-direction: {{ section.settings.newsletter_layout }};
    gap: 10px;
    margin-top: 15px;
  }

  .footer-newsletter-input-group-wrapper-{{ footer_id }} {
    display: flex;
    width: 100%;
  }

  .footer-newsletter-input-group-wrapper-{{ footer_id }} .footer-newsletter-input-{{ footer_id }} {
    border-top-right-radius: 0 !important;
    border-bottom-right-radius: 0 !important;
    flex: 1;
  }

  .footer-newsletter-input-group-wrapper-{{ footer_id }} .footer-newsletter-button-{{ footer_id }} {
    border-top-left-radius: 0 !important;
    border-bottom-left-radius: 0 !important;
    margin-left: -1px;
    min-width: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 16px;
  }

  .footer-newsletter-input-{{ footer_id }} {
    flex: 1;
    min-width: 0;
    padding: 12px 15px;
    border: 1px solid {{ section.settings.newsletter_input_border }};
    border-radius: {{ section.settings.newsletter_border_radius }}px;
    background-color: {{ section.settings.newsletter_input_bg }};
    color: {{ section.settings.newsletter_input_color }};
  }

  .footer-newsletter-input-{{ footer_id }}::placeholder {
    color: {{ section.settings.newsletter_input_color }};
    opacity: 0.7;
  }

  .footer-newsletter-button-{{ footer_id }} {
    padding: 12px 20px;
    border: none;
    border-radius: {{ section.settings.newsletter_border_radius }}px;
    background-color: {{ section.settings.newsletter_button_bg }};
    color: {{ section.settings.newsletter_button_color }};
    cursor: pointer;
    font-weight: 500;
    transition: background-color 0.2s ease;
    white-space: nowrap;
  }

  .footer-newsletter-button-{{ footer_id }}:hover {
    background-color: {{ section.settings.newsletter_button_hover_bg }};
  }

  .footer-newsletter-error-{{ footer_id }} {
    color: #d82c0d;
    font-size: 13px;
    margin-bottom: 10px;
  }

  .footer-newsletter-success-{{ footer_id }} {
    color: #008060;
    font-size: 13px;
    margin-bottom: 10px;
  }

  .footer-menu-toggle-{{ footer_id }} {
    display: none;
    background: none;
    border: none;
    padding: 0;
    margin: 0;
    cursor: pointer;
    position: absolute;
    right: 0;
    top: 0;
    width: 24px;
    height: 24px;
    color: {{ section.settings.heading_color }};
  }

  .footer-menu-wrapper-{{ footer_id }} {
    position: relative;
  }

  .footer-menu-heading-{{ footer_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }

  .footer-bottom-group-{{ footer_id }} {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  @media screen and (max-width: 767px) {
    .footer-grid-{{ footer_id }} {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: 0;
    }

    .footer-column-{{ footer_id }} {
      margin-bottom: 20px;
    }

    .footer-menu-toggle-{{ footer_id }} {
      display: block;
    }

    .footer-menu-heading-{{ footer_id }} {
      cursor: pointer;
      padding-right: 30px;
    }

    .footer-nav-{{ footer_id }} {
      display: none;
      padding-bottom: 15px;
    }

    .footer-nav-{{ footer_id }}.active {
      display: flex;
    }

    .footer-bottom-{{ footer_id }} {
      flex-direction: column;
      gap: 15px;
      text-align: center;
      justify-content: center !important;
    }

    .footer-bottom-group-{{ footer_id }} {
      flex-direction: column;
      gap: 15px;
    }

    .footer-newsletter-form-{{ footer_id }} {
      flex-direction: column;
    }
  }

  @media screen and (min-width: 768px) {
    .footer-nav-{{ footer_id }} {
      display: flex !important;
      flex-direction: column;
    }
  }

  .footer-newsletter-input-group {
    display: flex;
    align-items: stretch;
  }
  
  .footer-menu-toggle-{{ footer_id }}:focus {
    outline: none;
    box-shadow: none;
  }

  .footer-menu-toggle-{{ footer_id }} svg {
    display: inline-block;
    vertical-align: middle;
  }

  .footer-newsletter-button-icon-arrow svg,
  .footer-newsletter-button-icon-plus svg,
  .footer-newsletter-button-icon-custom svg {
    display: inline-block;
    vertical-align: middle;
  }
{% endstyle %}

<footer class="footer-{{ footer_id }}" {{ section.shopify_attributes }}>
  <div class="footer-container-{{ footer_id }}">
    <div class="footer-grid-{{ footer_id }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'company_info' %}
            <div class="footer-column-{{ footer_id }}" {{ block.shopify_attributes }}>
              {% if block.settings.display_option == 'title_only' or block.settings.display_option == 'both' %}
                <h3 class="footer-title-{{ footer_id }} footer-company-title-{{ footer_id }}">{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.logo != blank %}
                {% if block.settings.display_option == 'logo_only' or block.settings.display_option == 'both' %}
                  <div class="footer-company-logo-{{ footer_id }}">
                    <img src="{{ block.settings.logo | img_url: 'master' }}" alt="{{ block.settings.title }}">
                  </div>
                {% endif %}
              {% endif %}
              <div class="footer-company-info-{{ footer_id }}">
                {{ block.settings.info }}
                {% if block.settings.show_social_icons %}
                  <div class="footer-social-{{ footer_id }}">
                    {% if block.settings.show_facebook and block.settings.facebook_link != blank %}
                      <a href="{{ block.settings.facebook_link }}" class="footer-social-link-{{ footer_id }}" aria-label="Facebook">...</a>
                    {% endif %}
                    <!-- Repeat for other social icons as in original code -->
                  </div>
                {% endif %}
              </div>
            </div>
          {% when 'menu' %}
            <div class="footer-column-{{ footer_id }}" {{ block.shopify_attributes }}>
              <div class="footer-menu-wrapper-{{ footer_id }}">
                <div class="footer-menu-heading-{{ footer_id }}">
                  <h3 class="footer-title-{{ footer_id }} footer-menu-title-{{ footer_id }}">{{ block.settings.title }}</h3>
                  <button class="footer-menu-toggle-{{ footer_id }}" aria-expanded="false" aria-controls="footer-menu-{{ block.id }}-{{ footer_id }}">...</button>
                </div>
                <ul id="footer-menu-{{ block.id }}-{{ footer_id }}" class="footer-nav-{{ footer_id }} active">
                  {% for link in linklists[block.settings.menu].links %}
                    <li class="footer-nav-item-{{ footer_id }}"><a href="{{ link.url }}">{{ link.title }}</a></li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          {% when 'contact' %}
            <div class="footer-column-{{ footer_id }}" {{ block.shopify_attributes }}>
              <div class="footer-menu-wrapper-{{ footer_id }}">
                <div class="footer-menu-heading-{{ footer_id }}">
                  <h3 class="footer-title-{{ footer_id }}">{{ block.settings.title }}</h3>
                  <button class="footer-menu-toggle-{{ footer_id }}" aria-expanded="false" aria-controls="footer-contact-{{ block.id }}-{{ footer_id }}">...</button>
                </div>
                <div id="footer-contact-{{ block.id }}-{{ footer_id }}" class="footer-nav-{{ footer_id }} active">
                  <div class="footer-company-info-{{ footer_id }}">{{ block.settings.info }}</div>
                </div>
              </div>
            </div>
          {% when 'newsletter' %}
            <div class="footer-column-{{ footer_id }}" {{ block.shopify_attributes }}>
              <div class="footer-newsletter-{{ footer_id }}">
                <h3 class="footer-title-{{ footer_id }} footer-newsletter-title-{{ footer_id }}">{{ block.settings.title }}</h3>
                <p class="footer-newsletter-text-{{ footer_id }}">{{ block.settings.text }}</p>
                {% form 'customer' %}
                  <!-- Newsletter form as in original code, using block.settings -->
                {% endform %}
              </div>
            </div>
          {% when 'custom_html' %}
            <div class="footer-column-{{ footer_id }}" {{ block.shopify_attributes }}>
              {{ block.settings.html }}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
    <!-- Footer Bottom as in original code -->
  </div>
</footer>

<script>
  (function() {
    const menuToggles = document.querySelectorAll('.footer-menu-toggle-{{ footer_id }}');

    menuToggles.forEach(toggle => {
      toggle.addEventListener('click', function(event) {
        const menuId = this.getAttribute('aria-controls');
        const menu = document.getElementById(menuId);
        const isExpanded = this.getAttribute('aria-expanded') === 'true';

        this.setAttribute('aria-expanded', !isExpanded);
        menu.classList.toggle('active');
        event.stopPropagation && event.stopPropagation();

        // Toggle plus/dash icon for plus style (ALWAYS update based on new state)
        if (this.querySelector('.plus-icon') && this.querySelector('.dash-icon')) {
          const nowExpanded = this.getAttribute('aria-expanded') === 'true';
          if (nowExpanded) {
            this.querySelector('.plus-icon').style.display = 'none';
            this.querySelector('.dash-icon').style.display = 'inline-block';
          } else {
            this.querySelector('.plus-icon').style.display = 'inline-block';
            this.querySelector('.dash-icon').style.display = 'none';
          }
        }
      });
    });

    const menuHeadings = document.querySelectorAll('.footer-menu-heading-{{ footer_id }}');

    menuHeadings.forEach(heading => {
      heading.addEventListener('click', function(event) {
        // Only toggle if the click is on the heading, icon, or button (not on a link inside the menu)
        const wrapper = this.closest('.footer-menu-wrapper-{{ footer_id }}');
        const toggle = wrapper.querySelector('.footer-menu-toggle-{{ footer_id }}');
        // Only toggle on mobile (<= 767px)
        if (window.innerWidth <= 767) {
          if (toggle && (event.target === toggle || toggle.contains(event.target) || this.contains(event.target))) {
            toggle.click();
          }
        }
      });
    });

    window.addEventListener('resize', function() {
      if (window.innerWidth > 767) {
        document.querySelectorAll('.footer-nav-{{ footer_id }}').forEach(menu => {
          menu.classList.add('active');
        });

        document.querySelectorAll('.footer-menu-toggle-{{ footer_id }}').forEach(toggle => {
          toggle.setAttribute('aria-expanded', 'true');
        });
      }
      // Set correct plus/dash icon on resize
      document.querySelectorAll('.footer-menu-toggle-{{ footer_id }}').forEach(toggle => {
        const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
        if (toggle.querySelector('.plus-icon') && toggle.querySelector('.dash-icon')) {
          if (isExpanded) {
            toggle.querySelector('.plus-icon').style.display = 'none';
            toggle.querySelector('.dash-icon').style.display = 'inline-block';
          } else {
            toggle.querySelector('.plus-icon').style.display = 'inline-block';
            toggle.querySelector('.dash-icon').style.display = 'none';
          }
        }
      });
    });
    
    // Set correct plus/dash icon on page load
    document.addEventListener('DOMContentLoaded', function() {
      document.querySelectorAll('.footer-menu-toggle-{{ footer_id }}').forEach(toggle => {
        const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
        if (toggle.querySelector('.plus-icon') && toggle.querySelector('.dash-icon')) {
          if (isExpanded) {
            toggle.querySelector('.plus-icon').style.display = 'none';
            toggle.querySelector('.dash-icon').style.display = 'inline-block';
          } else {
            toggle.querySelector('.plus-icon').style.display = 'inline-block';
            toggle.querySelector('.dash-icon').style.display = 'none';
          }
        }
      });
    });

    // Helper to set menu and icon state
    function setMenuAndIconState() {
      const isMobile = window.innerWidth <= 767;
      document.querySelectorAll('.footer-menu-wrapper-{{ footer_id }}').forEach(wrapper => {
        const toggle = wrapper.querySelector('.footer-menu-toggle-{{ footer_id }}');
        const menu = wrapper.querySelector('.footer-nav-{{ footer_id }}');
        if (!toggle || !menu) return;
        if (isMobile) {
          // Collapse by default on mobile
          menu.classList.remove('active');
          toggle.setAttribute('aria-expanded', 'false');
        } else {
          // Expand by default on desktop
          menu.classList.add('active');
          toggle.setAttribute('aria-expanded', 'true');
        }
        // Set correct icon
        const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
        if (toggle.querySelector('.plus-icon') && toggle.querySelector('.dash-icon')) {
          if (isExpanded) {
            toggle.querySelector('.plus-icon').style.display = 'none';
            toggle.querySelector('.dash-icon').style.display = 'inline-block';
          } else {
            toggle.querySelector('.plus-icon').style.display = 'inline-block';
            toggle.querySelector('.dash-icon').style.display = 'none';
          }
        }
      });
    }
    // On load
    document.addEventListener('DOMContentLoaded', setMenuAndIconState);
    // On resize
    window.addEventListener('resize', setMenuAndIconState);
  })();
</script>

