<div class="m-menu-customer">
  {% if shop.customer_accounts_enabled or shop.customer_accounts_optional %}
    <div class="m-menu-customer__wrapper" style="padding: {{ section.settings.mb_drawer_account_padding_v | default: 12 }}px {{ section.settings.mb_drawer_account_padding_h | default: 16 }}px; gap: {{ section.settings.mb_drawer_account_gap | default: 12 }}px;">
      <div class="m-menu-customer__label" style="font-size: {{ section.settings.mb_drawer_account_label_size | default: 18 }}px; font-weight: {{ section.settings.mb_drawer_account_label_weight | default: 500 }};">{{ 'customer.account.title' | t }}</div>
      {% if customer %}
        <a href="{{ routes.account_url }}" class="m-menu-customer__name">
          <svg
            fill="currentColor"
            stroke="currentColor"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 448 512"
          >
            <path d="M313.6 304c-28.7 0-42.5 16-89.6 16-47.1 0-60.8-16-89.6-16C60.2 304 0 364.2 0 438.4V464c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48v-25.6c0-74.2-60.2-134.4-134.4-134.4zM400 464H48v-25.6c0-47.6 38.8-86.4 86.4-86.4 14.6 0 38.3 16 89.6 16 51.7 0 74.9-16 89.6-16 47.6 0 86.4 38.8 86.4 86.4V464zM224 288c79.5 0 144-64.5 144-144S303.5 0 224 0 80 64.5 80 144s64.5 144 144 144zm0-240c52.9 0 96 43.1 96 96s-43.1 96-96 96-96-43.1-96-96 43.1-96 96-96z"/>
          </svg>
          <span>{{ customer.first_name }}</span>
        </a>
        <a href="{{ routes.account_logout_url }}" class="m-button m-button--secondary m-logout-button">
          {{- 'customer.account.log_out' | t -}}
        </a>
      {% else %}
        <div class="m-menu-customer__auth-inline" style="display: flex; flex-direction: row; gap: {{ section.settings.mb_drawer_auth_btn_gap | default: 12 }}px;">
          <a
            href="{{ routes.account_login_url }}"
            class="m-button m-button--primary m-signin-button"
            data-tab="signin"
            style="
              background: {{ section.settings.mb_drawer_auth_btn_bg | default: '#fff' }};
              color: {{ section.settings.mb_drawer_auth_btn_text_color | default: '#222' }};
              border-radius: {{ section.settings.mb_drawer_auth_btn_radius | default: 8 }}px;
              font-size: {{ section.settings.mb_drawer_auth_btn_font_size | default: 16 }}px;
              font-weight: {{ section.settings.mb_drawer_auth_btn_font_weight | default: 500 }};
              padding: {{ section.settings.mb_drawer_auth_btn_padding_v | default: 10 }}px {{ section.settings.mb_drawer_auth_btn_padding_h | default: 18 }}px;
              display: inline-block;
              text-align: center;
              min-width: 0;
            "
          >
            {{ 'layout.customer.log_in' | t }}
          </a>
          <a
            href="{{ routes.account_register_url }}"
            class="m-button m-button--secondary m-register-button"
            data-tab="register"
            style="
              background: {{ section.settings.mb_drawer_auth_btn_bg | default: '#fff' }};
              color: {{ section.settings.mb_drawer_auth_btn_text_color | default: '#222' }};
              border-radius: {{ section.settings.mb_drawer_auth_btn_radius | default: 8 }}px;
              font-size: {{ section.settings.mb_drawer_auth_btn_font_size | default: 16 }}px;
              font-weight: {{ section.settings.mb_drawer_auth_btn_font_weight | default: 500 }};
              padding: {{ section.settings.mb_drawer_auth_btn_padding_v | default: 10 }}px {{ section.settings.mb_drawer_auth_btn_padding_h | default: 18 }}px;
              display: inline-block;
              text-align: center;
              min-width: 0;
            "
          >
            {{ 'customer.register.title' | t }}
          </a>
        </div>
      {% endif %}
    </div>
  {% endif %}
  <div class="m-menu-customer__language-currency">
    {%- liquid
      if section.settings.mb_show_country_selector
        render 'country-selector', box_size: '', pos: 'top'
      endif
      if section.settings.mb_show_currency_switcher
        render 'currency-switcher', box_size: '', pos: 'top'
      endif
      if section.settings.mb_show_language_switcher
        render 'language-switcher', box_size: '', pos: 'top'
      endif
    -%}
  </div>
</div>
