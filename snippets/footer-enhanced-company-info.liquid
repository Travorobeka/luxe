{%- comment -%}
  Enhanced Footer Company Info Block
  Implements all company info features/settings from footer.md
{%- endcomment -%}
<div class="footer-enhanced__company-info">
  {% if block.settings.logo != blank %}
    <img src="{{ block.settings.logo | img_url: 'master' }}" alt="{{ block.settings.title }}" class="footer-enhanced__company-logo">
  {% endif %}
  <h3 class="footer-enhanced__company-title">{{ block.settings.title }}</h3>
  <div class="footer-enhanced__company-text">{{ block.settings.info }}</div>
</div> 